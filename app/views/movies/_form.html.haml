= form_for(movie) do |f|
  - if movie.errors.any?
    #error_explanation
      %h2
        = pluralize(movie.errors.count, "error")
        prohibited this movie from being saved:
      %ul
        - movie.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :rating
    = f.number_field :rating
  .actions
    = f.submit
