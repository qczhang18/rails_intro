%h1 New User
- if @user.errors.full_messages.any?
  %ul
    -@user.errors.full_messages.each do |error_message|
      %li= error_message
      %br
=form_for @user do |f|
  = f.label :fname
  = f.text_field :fname
  %br
  = f.label :lname
  = f.text_field :lname
  %br
  = f.label :email
  = f.text_field :email
  %br
  = f.label :password
  = f.text_field :password
  %br
  = f.submit
